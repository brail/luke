{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@luke/core": ["../../packages/core/src"],
      "@luke/core/*": ["../../packages/core/src/*"],
      "@luke/api": ["../../apps/api/src"],
      "@luke/api/*": ["../../apps/api/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
