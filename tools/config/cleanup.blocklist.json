{
  "description": "File e pattern che NON devono mai essere rimossi durante il cleanup",
  "patterns": [
    "**/prisma/migrations/**",
    "**/schema.prisma",
    "**/*.env*",
    "**/package.json",
    "**/tsconfig*.json",
    "**/README*",
    "**/LICENSE*",
    "**/CHANGELOG*",
    "**/CONTRIBUTING*",
    "**/SECURITY*",
    "**/AUDIT*",
    "**/RBAC*",
    "**/OPERATIONS*",
    "**/INTEGRATIONS*",
    "**/API_SETUP*",
    "**/SETUP_STATUS*",
    "**/migration_lock.toml",
    "**/seed.ts",
    "**/scripts/**",
    "**/test/**",
    "**/__tests__/**",
    "**/__snapshots__/**",
    "**/vitest.config.*",
    "**/jest.config.*",
    "**/next.config.*",
    "**/tailwind.config.*",
    "**/postcss.config.*",
    "**/components.json",
    "**/turbo.json",
    "**/pnpm-workspace.yaml",
    "**/pnpm-lock.yaml",
    "**/yarn.lock",
    "**/package-lock.json",
    "**/.gitignore",
    "**/.gitattributes",
    "**/.editorconfig",
    "**/.prettierrc*",
    "**/.eslintrc*",
    "**/eslint.config.*",
    "**/husky.config.*",
    "**/.husky/**",
    "**/dist/index.d.ts",
    "**/dist/index.js",
    "**/dist/**/*.d.ts",
    "**/dist/**/*.js"
  ],
  "exact_paths": [
    "apps/api/prisma/schema.prisma",
    "apps/api/prisma/migrations",
    "apps/web/next.config.js",
    "apps/web/tailwind.config.js",
    "apps/web/postcss.config.js",
    "apps/web/components.json",
    "packages/core/package.json",
    "apps/api/package.json",
    "apps/web/package.json",
    "package.json",
    "turbo.json",
    "pnpm-workspace.yaml"
  ]
}
